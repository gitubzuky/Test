    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/adapter_m_week_tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/color_white_ffffff"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_red_fe8989_dot" />

    <TextView
        android:id="@+id/adapter_m_week_tv_oviposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排卵日"
        android:textSize="12sp"
        android:layout_below="@+id/adapter_m_week_tv_day"
        android:layout_marginTop="2dp" />
</RelativeLayout>